<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      Sign in
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label for="email"></label>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"Email Address", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label for="password"></label>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"Password" %>
    </div>
  </div>
  <div class='sign-btn'>
    <%= f.submit "Sign in" ,class:"sign-panel-btn" %>
  </div>
</div>
<% end %>