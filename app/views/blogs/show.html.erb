<div class="ask-detail">
  <div class="ask-title">
    <%= @blog.title %>
  </div>
  <div class="ask-category">
    <%= @blog.category.name %>
  </div>
  <%= image_tag @blog.image.variant(resize: '250x250'), class: 'blog-image' if @blog.image.attached? %>
  <div class="ask-content">
    <%= @blog.content %>
  </div>
  <div class="ask-user">
    <%= @blog.user.nickname %>
  </div>
  <div class="ask-date">
    <%= l @blog.created_at %>
  </div>
</div>

<% if user_signed_in? && current_user.id == @blog.user_id %>
  <%= link_to "編集する", edit_blog_path(@blog.id), method: :get, class: "blog-btn" %>
  <%= link_to "削除する", blog_path(@blog.id), method: :delete, class:"blog-destroy" %>
<% end %>
