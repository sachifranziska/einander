<%= form_with(model: @blog, local: true) do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        情報をシェアする
      </h1>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label for="title"></label>
        <%= f.text_field :title, class:"input-default", id:"title", placeholder:"Title" %>
      </div>
    </div>
    <div class="form-group">
      <div class='category-wrap'>
        <label class="form-text">Category</label>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"category-select"}) %>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-image">
          <%= f.file_field :image, class:"image-default", id:"form-image" %>
        </label>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label for="content"></label>
        <%= f.text_area :content, class:"input-text", id:"content", placeholder:"Text" %>
      </div>
    </div>
    <div class='sign-btn'>
      <%= f.submit "Send" ,class:"sign-panel-btn" %>
    </div>
  </div>
<% end %>